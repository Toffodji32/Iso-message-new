<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}IsoMessage{% endblock %}</title>

    {# Liens vers Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"  rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link rel="stylesheet" href="{{ asset('css/isocel-style.css') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body>
<div class="container-fluid d-flex p-0">
    <div class="sidebar">
        <a href="{{ path('app_dashboard') }}" class="logo">ISOCEL</a>

        <div class="nav-section">TABLEAU DE BORD</div>
        <a href="{{ path('app_dashboard') }}"
           class="nav-item {% if app.request.get('_route') == 'app_dashboard' %}active{% endif %}">
            <i class="fas fa-chart-line icon"></i>
            Tableau de bord
        </a>

        <div class="nav-section">CARNET D'ADRESSE</div>
        <a href="{{ path('app_contact_index') }}"
           class="nav-item {% if app.request.get('_route') starts with 'app_contact' %}active{% endif %}">
            <i class="fas fa-user-group icon"></i>
            Contacts
        </a>
        <div class="nav-section">Groupe de Contacts</div>
        <a href="{{ path('app_contact_group_index') }}"
           class="nav-item {% if app.request.get('_route') starts with 'app_contact_group' %}active{% endif %}">
            <i class="fas fa-user-group icon"></i>
            Groupe de contacts
        </a>

        <div class="nav-section">CAMPAGNES</div>
        <a href="#" class="nav-item {% if app.request.get('_route') starts with 'app_sms' %}expanded{% endif %}" id="sms-nav">
            <i class="fas fa-sms icon"></i>
            SMS
            <span class="arrow">▼</span>
        </a>

            <div class="sub-nav" {% if app.request.get('_route') starts with 'app_sms' %}style="display: block;"{% endif %}>
                <a href="{{ path('app_send_sms') }}" class="sub-nav-item {% if app.request.get('_route') == 'app_send_sms' %}active{% endif %}">Messages</a>
            </div>

            <div class="sub-nav" {% if app.request.get('_route') starts with 'app_sms' %}style="display: block;"{% endif %}>
                <a href="{{ path('app_send_sms') }}" class="sub-nav-item {% if app.request.get('_route') == 'app_sms_historique' %}active{% endif %}">Historique</a>
            </div>

    </div>

    <div class="main-content">
        <div class="header">
            <div></div>

            <div class="user-info dropdown">
                <a href="#" class="dropdown-toggle d-flex align-items-center text-decoration-none text-dark"
                   id="dropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="d-none d-md-inline">{{ app.user ? app.user.email : 'Utilisateur' }}</span>
                    <div class="user-avatar ms-2 rounded-circle d-flex align-items-center justify-content-center">
                        {% if app.user %}
                            {{ app.user.email|slice(0, 1)|upper }}
                        {% else %}
                            U
                        {% endif %}
                    </div>
                </a>

                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUser">
                    {% if app.user %}
                        <li><h6 class="dropdown-header">{{ app.user.email }}</h6></li>
                        <li><hr class="dropdown-divider"></li>
                    {% endif %}
                    <li><a class="dropdown-item" href="{{ path('app_profile') }}">Paramètres</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                </ul>
            </div>
        </div>

        <div class="content-area">
            {# ========================================================== #}
            {# DÉBUT DE LA MODIFICATION : Affichage des messages flash    #}
            {# ========================================================== #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show mb-3" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            {# ========================================================== #}
            {# FIN DE LA MODIFICATION                                   #}
            {# ========================================================== #}

            {% block body %}{% endblock %}
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
<script src="{{ asset('js/isocel-app.js') }}"></script>

{% block modals %}{% endblock %}
{% block javascripts %}
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
 {% endblock %}
</body>
</html>
