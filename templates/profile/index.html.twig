{% extends 'base.html.twig' %}

{% block title %}Détails du compte{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #f5f7fa;
            font-family: 'Segoe UI', 'Roboto', sans-serif;
        }

        .profile-page {
            padding: 40px 80px;
            height: 100%;
        }

        .header-with-button {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }

        .profile-header {
            font-size: 2rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .form-section {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.05);
        }

        .info-label {
            font-weight: 600;
            color: #34495e;
        }

        .info-value {
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 6px;
            transition: background-color 0.3s;
            color: #fff;
            text-decoration: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
<section class="profile-page">

    <div class="header-with-button">
        <div class="profile-header">Détails du compte</div>
        <a href="{{ path('app_profile_edit')}}" class="btn-primary">
            <i class="fas fa-edit me-2"></i> Modifier
        </a>
    </div>

    <div class="form-section">
        <div class="info-label">Email</div>
        <div class="info-value">{{ user.email }}</div>

        <div class="info-label">Nom complet</div>
        <div class="info-value">{{ user.fullName }}</div>

        <div class="info-label">Numéro de téléphone</div>
        <div class="info-value">{{ user.phoneNumber }}</div>
    </div>

</section>
{% endblock %}
